<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Ayarlar"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_login_yenile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="yenile ve anasayfaya dön"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:icon="@android:drawable/ic_menu_rotate" />

            <Button
                android:id="@+id/btn_login_tema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tema değiştir"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:icon="@android:drawable/ic_menu_view" />

            <Button
                android:id="@+id/btn_login_sepettemizle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sepetimi temizle"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:icon="@android:drawable/ic_menu_delete" />

            <Button
                android:id="@+id/btn_login_hedefimisil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hedefimi temizle"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:icon="@android:drawable/ic_menu_delete" />

            <Button
                android:id="@+id/btn_login_bilgilerimisil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bilgilerimi temizle"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:icon="@android:drawable/ic_menu_delete" />

            <Button
                android:id="@+id/btn_login_yemeklerimisil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="yemeklerimi sıfırla"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:icon="@android:drawable/ic_menu_manage" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>