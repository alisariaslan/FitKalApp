<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient3"
    tools:context=".MainActivity_Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/audiowide"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="@string/my_profile"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableTop="@android:drawable/ic_menu_edit"
                    android:fontFamily="@font/audiowide"
                    android:lines="2"
                    android:text="@string/edit_profile"
                    android:textSize="10sp"
                    app:cornerRadius="50dp"
                    app:layout_constraintEnd_toStartOf="@+id/button9"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableTop="@android:drawable/ic_menu_delete"
                    android:fontFamily="@font/audiowide"
                    android:lines="2"
                    android:text="@string/delete_profile"
                    android:textSize="10sp"
                    app:cornerRadius="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button8"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    app:cardCornerRadius="50dp"
                    app:contentPaddingBottom="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button9"
                    tools:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/editTextTextPersonName10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:fontFamily="@font/audiowide"
                            android:hint="@string/weight"
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName9"
                            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName9"
                            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName9" />

                        <EditText
                            android:id="@+id/editTextTextPersonName11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:fontFamily="@font/audiowide"
                            android:hint="@string/height"
                            android:inputType="numberSigned"
                            android:maxLength="3"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName10"
                            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName10"
                            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName10" />

                        <EditText
                            android:id="@+id/editTextTextPersonName8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="28dp"
                            android:ems="10"
                            android:fontFamily="@font/audiowide"
                            android:hint="@string/name"
                            android:inputType="textPersonName"
                            android:maxLength="50"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:layout_editor_absoluteY="16dp" />

                        <EditText
                            android:id="@+id/editTextTextPersonName9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:fontFamily="@font/audiowide"
                            android:hint="@string/age"
                            android:inputType="numberSigned"
                            android:maxLength="2"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName8"
                            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName8"
                            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName8" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/name"
                            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName8"
                            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName8" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/age"
                            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName9"
                            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName9"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName9" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/weight"
                            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName10"
                            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName10" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/height"
                            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName11"
                            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName11"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName11" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="250dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:fontFamily="@font/audiowide"
                            android:text="@string/ok"
                            app:cornerRadius="50dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName11" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/audiowide"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="@string/ate_list_empty"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ate_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:visibility="visible">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>